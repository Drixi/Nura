<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NuraBG"
    android:orientation="vertical" >

    <Space android:id="@+id/medidummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvScanBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/medidummy"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:text="Or Search: "
        android:textSize="40dp" />

    <Button
        android:id="@+id/btMedicineBack"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/medidummy"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/tvScanBar"
        android:layout_marginTop="40dp"
        android:background="@drawable/next" />

    <EditText
        android:id="@+id/tvSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/medidummy"
        android:ems="10"
        android:hint="Medicine ID:"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvScanMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvScanBar"
        android:layout_centerHorizontal="true"
        android:text="Scan Medicine"
        android:textSize="80dp" />

    <Button
        android:id="@+id/btMedicineNEXT"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/btMedicineBack"
        android:layout_toRightOf="@+id/medidummy"
        android:layout_marginLeft="50dp"
        android:background="@drawable/next" />

</RelativeLayout>
