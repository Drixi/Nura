<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NuraBG"
    android:orientation="vertical" >

    <Space android:id="@+id/patdummy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btPatientNEXT"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/patdummy"
        android:layout_alignTop="@+id/btPatientBack"
        android:layout_marginLeft="50dp"
        android:background="@drawable/next" />

    <TextView
        android:id="@+id/tvScanPatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvScanBar"
        android:layout_centerHorizontal="true"
        android:text="Scan Patient"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/tvScanBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/patdummy"
        android:layout_centerVertical="true"
        android:text="Or Search: "
        android:textSize="40dp" />"

    <Button
        android:id="@+id/btPatientBack"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/patdummy"
        android:layout_below="@+id/tvScanBar"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/next" />

    <EditText
        android:id="@+id/tvSearchBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/patdummy"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Patient ID:"
        android:inputType="text" >

        <requestFocus />
    </EditText>

</RelativeLayout>
